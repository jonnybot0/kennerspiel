# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /tables/index               controllers.Tables.index()

GET		/tables/:id/index			controllers.Tables.indexId(id: Integer)
POST    /tables						controllers.Tables.add()
GET		/tables						controllers.Tables.getAll()
GET		/tables/:id					controllers.Tables.get(id: Integer)
DELETE  /tables/:id					controllers.Tables.delete(id: Integer)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
